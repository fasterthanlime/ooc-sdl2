Name: SDL 2.0 OpenGL support
Description: OpenGL headers + libraries for SDL2
Requires: sdl2

version (linux || windows || mac) {
  Includes: SDL_opengl.h
} else version (android || ios) {
  Includes: SDL_opengles2.h
}

version (linux) {
  Libs: -lGL
}

version (windows) {
  Libs: -lopengl32
}

version (apple && !ios) {
  Frameworks: Carbon, OpenGL
}

version (android) {
  Libs: -lGLESv2
}

